SELECT * FROM (SELECT b FROM t1 UNION SELECT a FROM t1) tttt ORDER BY b;
SELECT * FROM (SELECT * FROM t1 UNION SELECT * FROM t1) tttt ORDER BY a;
DROP TABLE t1;

